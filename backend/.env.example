# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Railway will provide DATABASE_URL automatically)
# For local development, use: postgresql://user:password@localhost:5432/splitscreen
DATABASE_URL=postgresql://user:password@localhost:5432/splitscreen

# Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production
JWT_EXPIRY=7d

# External APIs
LEAGUEPEDIA_API_URL=https://lol.fandom.com/api.php
ORACLE_ELIXIR_CSV_URL=https://oracleselixir-downloadable-match-data.s3-us-west-2.amazonaws.com/2025_LoL_esports_match_data_from_OraclesElixir.csv

# Redis (Optional - Upstash for serverless, or Railway addon)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Email (SendGrid for transactional emails)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@splitscreen.gg

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_tier_price_id

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Cron Jobs
ENABLE_GAME_PROCESSOR=true
ENABLE_DAILY_VALIDATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Timezone (all times displayed in ET per spec)
TZ=UTC
DISPLAY_TIMEZONE=America/New_York

# Admin Notifications
ADMIN_EMAIL=admin@splitscreen.gg
ADMIN_DISCORD_WEBHOOK=your-discord-webhook-url-for-critical-alerts
